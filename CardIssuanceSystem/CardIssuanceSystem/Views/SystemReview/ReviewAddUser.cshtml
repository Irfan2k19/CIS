@model IEnumerable<CardIssuanceSystem.DAL.tbl_Users>
@{
    ViewBag.Title = "ReviewAddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="divTableData">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>UserName</th>
                        <th>Authorizer Comments</th>
                        <th>View</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.UserLogin</td>
                    <td>@item.AuthorizationComments</td>
                    <td>
                        <a href="@Url.Action("Register", "Login", new { Id = item.ID })"><button class='btn btn-cstm'><i class='fa fa-eye'></i></button></a>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr colspan="3">
                    <td>No Record Found!</td>
                </tr>
            }
                </tbody>
            </table>
        </div><!-- End table-responsive -->
    </div>
</div>

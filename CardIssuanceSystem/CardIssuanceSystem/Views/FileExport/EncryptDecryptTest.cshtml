@model List<CardIssuanceSystem.Core.ViewModel.ImportFileVM>
    @{
    ViewBag.Title = "EncryptDecryptTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section CustomJS{
    <script type="text/javascript">
        $(function () {
            $('input[name="optradio1"]').on('click', function (e) {
                var data = $(this).attr("data-attr-fileshortname");
                $('#filename1').val(data);
            });

            $('input[name="optradio2"]').on('click', function (e) {
                var data = $(this).attr("data-attr-fileshortname");
                $('#filename2').val(data);
            });
        });
    </script>
    }
    <div class="container">
        @*<h4 class="main_hdng">EncryptDecryptTest</h4>*@
        <hr />
        <div class="row form-group">
            <h4 class="main_hdng">Encrypt</h4>
            <div class="col-md-12">

                @using (Html.BeginForm("Encrypt", "FileExport", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-xs-12">
                        <div id="divTable1" style="max-height: 300px;overflow-y: scroll;">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>File Name</th>
                                        <th>Directory Name</th>
                                        <th>File Full Name</th>
                                        <th>File Creation Date</th>
                                        <th>File Modified Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count > 0)
                                    {
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <div class="radio" style="margin: 0px !important;">
                                                <label>
                                                    <input type="radio" name="optradio1" value="@item.FileFullName" data-attr-filefullname="@item.FileFullName" data-attr-fileshortname="@item.FileName"><span class="checkbox-material"><span class="check"></span></span>

                                                </label>
                                            </div>
                                        </td>
                                        <td>@item.FileName</td>
                                        <td>@item.DirectoryName</td>
                                        <td>@item.FileFullName</td>
                                        <td>@item.FileCreationTime</td>
                                        <td>@item.FileModifiedTime</td>
                                    </tr>
                                    }
                                    }
                                    else
                                    {
                                    <tr>
                                        <td colspan="6">No file exists</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="input-group input-group-lg">
                            <input name="filename" value="Master Silver- New Card Ammendment Request 20180425 170433.txt" class="form-control" type="text" id="filename1" />
                            <div class="input-group-btn">
                                <input type="submit" class="btn btn-default" />
                            </div><!-- /btn-group -->
                        </div><!-- /input-group -->
                    </div><!-- /.col-xs-12 -->
                </div><!-- /.row -->
                }
            </div>
        </div>
        <div class="row form-group">
            <h4 class="main_hdng">Decrypt</h4>
            <div class="col-md-12">
                @using (Html.BeginForm("Decrypt", "FileExport", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-xs-12">
                        <div id="divTable2" style="max-height: 300px;overflow-y: scroll;">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>File Name</th>
                                        <th>Directory Name</th>
                                        <th>File Full Name</th>
                                        <th>File Creation Date</th>
                                        <th>File Modified Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count > 0)
                                    {
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <div class="radio" style="margin: 0px !important;">
                                                <label>
                                                    <input type="radio" name="optradio2" value="@item.FileFullName" data-attr-filefullname="@item.FileFullName" data-attr-fileshortname="@item.FileName"><span class="checkbox-material"><span class="check"></span></span>

                                                </label>
                                            </div>
                                        </td>
                                        <td>@item.FileName</td>
                                        <td>@item.DirectoryName</td>
                                        <td>@item.FileFullName</td>
                                        <td>@item.FileCreationTime</td>
                                        <td>@item.FileModifiedTime</td>
                                    </tr>
                                    }
                                    }
                                    else
                                    {
                                    <tr>
                                        <td colspan="6">No file exists</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="input-group input-group-lg">
                            <input name="filename" value="(Master Silver- New Card Ammendment Request 20180425 170433)DEMO2018-27-4--16-29-37.txt" class="form-control" type="text" id="filename2" />
                            <div class="input-group-btn">
                                <input type="submit" class="btn btn-default" />
                            </div><!-- /btn-group -->
                        </div><!-- /input-group -->
                    </div><!-- /.col-xs-12 -->
                </div><!-- /.row -->
                }
            </div>
        </div>
    </div>

